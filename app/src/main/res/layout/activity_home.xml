<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OtoroBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.queenievatcha.otoro1.HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorAccent"
        app:titleTextColor="#fff" />

    <TextView
        android:id="@+id/toolbarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="OTORO"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_above="@+id/btn_map"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:onClick="goMenu"
        android:scaleType="centerCrop"
        android:text="OTORO DELIVERY"
        app:srcCompat="@drawable/button_tonkatsu" />

    <ImageButton
        android:id="@+id/btn_map"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:onClick="goMap"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/button_daifuku" />

    <ImageButton
        android:id="@+id/btn_schedule"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_map"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:onClick="popUp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/button_tuna" />

    <TextView
        android:id="@+id/caption_btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/btn_menu"
        android:layout_alignTop="@+id/btn_menu"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:text="OTORO DELIVERY"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/caption_btn_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/btn_map"
        android:layout_alignTop="@+id/btn_map"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:text="OTORO NEAR YOU"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/caption_btn_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/btn_schedule"
        android:layout_alignTop="@+id/btn_schedule"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:text="DELIVERY SCHEDULE"
        android:textColor="#fff"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/toolbarText"
        android:layout_marginEnd="11dp"
        android:background="@null"
        android:onClick="goInfo"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

</RelativeLayout>
